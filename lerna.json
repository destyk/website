{
    "version": "independent",
    "packages": [
        "apps/*",
        "packages/*"
    ],
    "command": {
        "publish": {
            "registry": "https://npm.pkg.github.com/",
            "message": "chore: publish"
        },
        "version": {
            "conventionalCommits": true
        }
    },
    "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/package.json",
        "**/package-lock.json",
        "**/*.md"
    ]
}